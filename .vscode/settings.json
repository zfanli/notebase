{
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "[markdown]": {
    "editor.quickSuggestions": true
  },
  "files.defaultLanguage": "markdown",
  "files.exclude": {
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/node_modules": true
  },
  "foam.edit.linkReferenceDefinitions": "off",
  "foam.openDailyNote.directory": "journal",
  "foam.openDailyNote.titleFormat": "yyyy-mm-dd ddd",
  "foam.openDailyNote.filenameFormat": "yyyy-mm-dd ddd",
  "foam.graph.style": {
    "background": "#202020",
    "fontSize": 12,
    "highlightedForeground": "#FE87AC",
    "node": {
      "note": "#CFE4DD",
      "placeholder": "#5E556A",
      "tag": "#FECBCF",
      "Linux": "#9FE7F5",
      "EnglishWords": "#FE87AC"
    }
  },
  "foam.files.ignore": [
    "**/.foam/**/*",
    "**/.vscode/**/*",
    "**/_layouts/**/*",
    "**/_site/**/*",
    "**/node_modules/**/*"
  ],
  "git.enableSmartCommit": true,
  "markdown.preview.breaks": true,
  "pasteImage.path": "${projectRoot}/attachments",
  "pasteImage.showFilePathConfirmInputBox": true,
  "prettier.singleQuote": false,
  "spellright.notificationClass": "warning",
  "vscodeMarkdownNotes.noteCompletionConvention": "noExtension",
  "vscodeMarkdownNotes.slugifyMethod": "github-slugger",
  "spellright.language": ["en"],
  "spellright.documentTypes": ["markdown", "latex", "plaintext"],
  "cSpell.words": [
    "Backlinking",
    "Backlinks",
    "balabla",
    "divs",
    "keypress",
    "keyup",
    "Kube",
    "Kubernetes",
    "vnode",
    "vuejs",
    "wikilink",
    "wikilinks"
  ],
  "markdown-preview-enhanced.codeBlockTheme": "vue.css",
  "markdown-preview-enhanced.frontMatterRenderingOption": "code block",
  "markdown-preview-enhanced.previewTheme": "vue.css"
}
